:root {
	--purple: rgb(24, 10, 28);
	--med-purple: rgb(54, 30, 78);
	--med-purple: rgb(74, 50, 98);
	--dark-grey: rgb(41, 44, 51);
	--med-grey: rgb(87, 89, 93);
	--light-grey: rgb(137, 139, 143);
	--off-white: #d1d1d1;
	--off-black: #222;
	--bg-image: url("{{ 'assets/45-degree-fabric-dark.png' | relative_to: page.path }}");
}

@font-face {
	font-family: "Kingthings Typewriter";
	src: url("Kingthings-Typewriter.woff") format("woff");
}

@font-face {
	font-family: "Comic Zine";
	src: url("Comic-Zine.woff") format("woff");
}

* {
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

body {
	background-color: var(--dark-grey);
	background-image: var(--bg-image);
	color: var(--off-white);
}

header {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	padding-left: 2rem;
}

header, #hero {
	background-image: var(--bg-image);
	background-color: var(--purple);
}

nav {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: flex-end;
	font-family: sans-serif;
}

nav > a:hover {
	background-color: var(--off-white);
	color: var(--purple);
	box-shadow: inset 0px -8px 0px 0px var(--med-purple);
}

nav > a { padding: 1.5rem 2rem }
p { margin: 0.8rem 0 }
a {
	color: var(--off-white);
	text-decoration: none;
}
ul { margin: 1rem 0 1rem 1rem }

#wrapper {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	width: 100vw;
	min-height: 100vh;
}

#hero {
  display: flex;
  flex-direction: column;
  padding: 3rem 0 6rem 0;
  text-align: center;
}

#hero #title {
  font-size: 10rem;
  line-height: 9rem;
}

#hero #subtitle {
  color: var(--light-grey);
  font-size: 1.2rem;
}

#title, h1, h2, h3, h4, h5 {
  font-family: "Comic Zine", "Kingthings Typewriter", serif;
}

h1, h2, h3, h4, h5 { color: var(--purple) }
h1 { font-size: 2.0rem }
h2 { font-size: 1.75rem; margin: 1.5rem 0 0.5rem 0 }
h3 { font-size: 1.5rem; margin: 1.5rem 0 0.5rem 0 }
h4 { font-size: 1.25rem; margin: 1.5rem 0 0.5rem 0 }
h5 { font-size: 1rem; margin: 1.5rem 0 0.5rem 0 }

#main {
	display: flex;
	flex-direction: row;
}

.content {
	width: 60%;
	padding: 3rem 5rem;
	background-color: var(--off-white);
	color: var(--off-black);
}

.content a {
	color: var(--purple);
    text-decoration: underline;
}

a.button {
	display: inline-block;
	background-color: var(--med-purple);
	background-image: var(--bg-image);
	padding: 0.8rem;
	border-radius: 3px;
	color: var(--off-white);
	text-decoration: none;
	font-family: sans-serif;
	font-size: 0.9rem;
	white-space: nowrap;
}
a.button:hover { background-color: var(--med-purple) }

footer {
	padding: 20px;
	text-align: center;
}

code { border-radius: 3px }
code:not(.hljs) {
	background-color: #bbb;
	padding: 2px 4px;
}

.flex { flex: 1 1 auto }
