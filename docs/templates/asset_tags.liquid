{% assign css_files = files | where: "extname", ".css" -%}
{% for file in css_files %}
	<!-- {{ page.url }} -->
    <link rel="stylesheet" href="{{ file.url | relative_to: page.path }}">
{% endfor %}

{% assign js_files = files | where: "extname", ".js" -%}
{% for file in js_files %}
    <script src="{{ file.url | relative_to: page.path }}"></script>
{% endfor %}
